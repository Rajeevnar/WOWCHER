<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="varchar" name="dutypaid" nullable="true" length="255" />
    </table>
    <table name="sales_order_item" resource="sales" engine="innodb" comment="Sales Order item">
        <column xsi:type="varchar" name="dutypaid" nullable="true" length="255" />
        <column xsi:type="varchar" name="fee" nullable="true" length="255" />
        <column xsi:type="varchar" name="duty_hscode" nullable="true" length="255" />
        <column xsi:type="varchar" name="country_of_manufacture" nullable="true" length="255" />
    </table>
</schema>
