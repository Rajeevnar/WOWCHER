<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <tab id="fmeextensions" translate="label" sortOrder="1000">
      <label>FME Extention</label>
    </tab>
    <section id="extendedminicart" translate="label" type="text" sortOrder="98" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>General Settings</label>
      <tab>fmeextensions</tab>
      <resource>FME_ExtendedMiniCart::configuration</resource>
	   <group id="globalsetting" translate="label" type="text" sortOrder="991" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>General Configuration</label>
        <!--fileds goes here-->
        <field id="enable_extendedminicart" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
          <label>Enable ExtendedMiniCart</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                  
        </field>
        <field id="enable_minicartsummary" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
          <label>Enable MiniCart Summary</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                  
        </field>
        <field id="enable_minicartreleated" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
          <label>Enable MiniCart Related Product</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                  
        </field>
        <field id="enable_minicartqtyupdate" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
          <label>Enable CheckOut Quantity Update</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                  
        </field>
        <field id="enable_minicartautoscrol" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
          <label>Enable MiniCart Scroll</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>                  
        </field>
       </group>
    </section>
  </system>
</config>
