<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/customerapi">
        <service class="Rvs\CustomerApi\Api\PostManagementInterface" method="customGetMethod"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
<!--POST API Start-->
    <route method="POST" url="/V1/customerapi/post">
<service class="Rvs\CustomerApi\Api\PostManagementInterface" method="customPostMethod"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
